<div class="container-fluid ">
    <div class="pedido">
        <h1>{{tituloPagina}}</h1>

        <div >
            <form action="" method="post">
                <div class="row">
                    <div class="col-6">
                        <label for="nome" class="form-label">Cliente:</label>
                        <input type="text" class="form-control" id="nome" placeholder="nome do cliente">
                    </div>
                    <div class="col-6">
                        <label for="telefone" class="form-label">Telefone do cliente:</label>
                        <input type="tel" class="form-control" id="telefone" placeholder="digite o telefone do cliente">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="destinatario" class="form-label">Entregar para: </label>
                        <input type="text" class="form-control" id="destinatario"
                            placeholder="digite o nome de quem vai receber">
                    </div>
                    <div class="col">
                        <label for="destinatarioNum" class="form-label">Telefone de quem vai receber: </label>
                        <input type="tel" class="form-control" id="destinatarioNum"
                            placeholder="digite o telefone de quem vai receber">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="endereco" class="form-label">Endereço: </label>
                        <input type="tel" class="form-control" id="endereco" placeholder="digite o endereço da entrega">
                    </div>
                    <div class="col">
                        <label for="referencia" class="form-label">Referência: </label>
                        <input type="tel" class="form-control" id="referencia"
                            placeholder="digite o endereço da entrega">
                    </div>
                </div>
                <button class="btn btn-secondary" type="submit">Enviar pedido</button>
            </form>
        </div>
    </div>
</div>